<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.views.ViewMainActivity">

    <Button
        android:id="@+id/btnScrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="滑动相关"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNestedScroll1" />

    <Button
        android:id="@+id/btnScroller1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scroller1"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="24dp" />

    <Button
        android:id="@+id/btnDragDrop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="DragDropView1"
        app:layout_constraintStart_toStartOf="@+id/btnScroller1"
        app:layout_constraintTop_toBottomOf="@+id/btnScroller1" />

    <Button
        android:id="@+id/btnPieView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:text="PieView"
        app:layout_constraintStart_toStartOf="@+id/btnDragDrop1"
        app:layout_constraintTop_toBottomOf="@+id/btnDragDrop1" />

    <Button
        android:id="@+id/btnNestedScroll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="嵌套滚动1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPieView" />

    <Button
        android:id="@+id/btnWebView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="WebView内存泄漏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnScrollview" />
</android.support.constraint.ConstraintLayout>